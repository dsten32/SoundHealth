<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings_frag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings_background"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="9dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="3dp"
            android:text="@string/interval"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/interval"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@color/common_google_signin_btn_text_light_disabled" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="3dp"
            android:text="@string/min"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/setDataStopTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/data_collection_stop_time" />

    <EditText
        android:id="@+id/dataStopTimeEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:focusable="false"
        android:hint="hh:mm"
        android:onClick="showPickerDialog" />

    <CheckBox
        android:id="@+id/setBlur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/blur" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <SeekBar
            android:id="@+id/blurBarValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:max="8"
            android:min="0"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:saveEnabled="true" />

        <TextView
            android:id="@+id/showBlurValue"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="0.0 Km"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/frag_close"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/submit_button"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/close"
            android:textColor="@color/colorSecondaryText"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>