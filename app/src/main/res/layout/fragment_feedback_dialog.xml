<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings_background"
    android:padding="5dp"
    android:gravity="center|center_horizontal|center_vertical"
    android:orientation="vertical">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CSV file Saved to location: "
        android:textAlignment="center"
        android:layout_marginBottom="10dp"/>

    <!--&lt;!&ndash;https://www.mkyong.com/android/android-rating-bar-example/&ndash;&gt;-->
    <!--&lt;!&ndash;https://www.tutorialspoint.com/how-to-use-ratingbar-in-android&ndash;&gt;-->
    <!--<RatingBar-->
        <!--android:id="@+id/rating_bar"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@color/colorPrimaryDark"-->
        <!--android:numStars="5"-->
        <!--android:rating="5"-->
        <!--android:stepSize="1" />-->

    <TextView
        android:id="@+id/csvPath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="not found.."
        android:textAlignment="textStart"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Data Preview"
        android:textAlignment="center" />

    <!--https://stackoverflow.com/questions/35762006/how-to-have-edittext-with-border-in-android-lollipop-->
    <EditText
        android:id="@+id/feedback_text"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@android:color/background_light"
        android:inputType="none"
        android:ems="10"
        android:focusable="true"
        android:gravity="start|top|left"
        android:imeOptions="actionDone"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:scrollbars="horizontal"
        android:scrollHorizontally="true"
        android:textIsSelectable="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/feedback_submit"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/submit_button"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/submit"
            android:textColor="@color/colorSecondaryText"
            android:textSize="20sp" />

        <Button
            android:id="@+id/feedback_close"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/submit_button"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/close"
            android:textColor="@color/colorSecondaryText"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>